extends ./layouts/base

block content
    .wrapper
        .canvas-holder
            canvas#canvas-area(width='300' height='300')
        script(type='text/javascript').
            var data = [
                {
                    value: 300,
                    color:"#F7464A",
                    highlight: "#FF5A5E",
                    label: "Running"
                },
                {
                    value: 150,
                    color: "#46BFBD",
                    highlight: "#5AD3D1",
                    label: "Green"
                },
                {
                    value: 100,
                    color: "#FDB45C",
                    highlight: "#FFC870",
                    label: "Yellow"
                },
                {
                    value: 40,
                    color: "#949FB1",
                    highlight: "#A8B3C5",
                    label: "Grey"
                },
                {
                    value: 120,
                    color: "#4D5360",
                    highlight: "#616774",
                    label: "Dark Grey"
                }
            ];

            window.onload = function() {
                var ctx = document.getElementById('canvas-area').getContext('2d');
                window.myChart = new Chart(ctx).Doughnut(data, {
                    labelAlign: 'center'
                });
            };
